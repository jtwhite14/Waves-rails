<%= link_to 'users', users_path %> | 
<%= link_to 'buoys', buoys_path %> | 
<%= link_to 'sessions', wave_sessions_path %> 
<br />
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Waves</th>
      <th>Sessions</th>
      <th>Last Signed In</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.waves.count %></td>
        <td><%= user.sessions.count %></td>
        <td><%= user.last_sign_in_at %><td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
